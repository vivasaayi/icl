<h3>
    <a href="/main/lyrics">
        <i class="mif-arrow-left fg-darker smaller"></i>
    </a>
    {{lyrics.name}}<small class="on-right"></small>
</h3>

{{#if error}}
<div class="notice">
    {{error}}
</div>
{{/if}}

<div class="panel">
    <div class="panel-content">

        <div class="grid">
            <div class="row cells2">
                <div class="cell colspan5">
                    {{#lyrics.content}}
                    {{#stanza}}
                    {{.}} <br />
                    {{/stanza}}
                    {{/lyrics.content}}
                </div>
                <div class="cell colspan7">
                    <div class="tabcontrol" data-role="tabControl">
                        <ul class="tabs">
                            <li class="active"><a href="#_page_1">Music</a></li>
                            <li><a href="#_page_2">Videos</a></li>
                        </ul>

                        <div class="frames">
                            <div class="frame" id="_page_1">
                                <div>
                                    {{#lyrics.soundCloud}}
                                    <div>
                                        <iframe width="100%" height="100" scrolling="no" frameborder="no"
                                                src="https://w.soundcloud.com/player/?url={{url}}&amp;
                                                auto_play=false&amp;
                                                hide_related=false&amp;
                                                show_comments=true&amp;
                                                show_user=true&amp;
                                                show_reposts=false&amp;
                                                visual=true"></iframe>
                                    </div>
                                    {{/lyrics.soundCloud}}
                                </div>
                            </div>
                            <div class="frame" id="_page_2">                                
                                <div>
                                    {{#lyrics.youTube}}
                                    <div>
                                        <iframe width="560" height="315"
                                                src="//www.youtube.com/embed/{{url}}"
                                                frameborder="0" allowfullscreen></iframe>

                                    </div>
                                    {{/lyrics.youTube}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
