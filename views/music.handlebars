<h1>
    <a href="/"><i class="mif-arrow-left fg-darker smaller"></i></a>
    Music<small class="on-right"></small>
</h1>

{{#if error}}
    <div class="notice">
        {{error}}
    </div>
{{/if}}

<div class="grid fluid">
{{#lyrics}} 
    <div class="row border  bd-darkPink">
        <div class="span1">
            <h1><i class="icon-play-alt on-right on-left"></i></h1>
        </div>        
        <div class="span11">
            <div class="row">
                {{name}}
            </div>
            {{#soundCloud}}
            <div class="row">
                <iframe width="100%" height="100" scrolling="no" frameborder="no" 
                    src="https://w.soundcloud.com/player/?url={{url}}&amp;
                        auto_play=false&amp;
                        hide_related=false&amp;
                        show_comments=true&amp;
                        show_user=true&amp;
                        show_reposts=false&amp;
                visual=true"></iframe>
            </div>
            {{/soundCloud}}
        </div>
    </div>       
{{/lyrics}}
</div> 
